<div class="large-3 small-12 column">
  <%=image_tag @coleccionable.poster%>
</div>
 
<div class="large-9 small-12 column">
  <h3>
    <%= @coleccionable.nombre %>
  </h3>
</div>

<div class="large-9 small-12 column">
  <h3>
    <%= @coleccionable.marca %>
  </h3>
</div>

<div class="large-9 small-12 column">
  <h3>
    <p class="left price label movie-label radius">$ <%= @coleccionable.precio %></p>
  </h3>
</div>

<%if signed_in?%>
<div class="large-9 small-12 column">
  <h3>
    <%= button_to 'Add to Cart', cart_coleccionables_path(coleccionable_id: @coleccionable)%>
  </h3>
</div>
<%end%>


