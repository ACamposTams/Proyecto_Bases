<% if signed_in? %>

<h2>Tu Carrito de Compras</h2>
<ul>
<% @cart.cart_productos.each do |item| %>
</ul>
<div class="large-3 small-12 column">
  <%=image_tag item.juego.poster%>
  <h3>
    <%= item.juego.titulo %>
  </h3>
  <h3>
    <%= item.cantidad %> copia
  </h3>
  <h3>
    <%= number_to_currency(item.total_price) %>
  </h3>
</div>
<%end%>
<h3>
   Precio total: <%= number_to_currency(@cart.total_price) %>
</h3>
<%= button_to 'Checkout', new_order_path, method: :get %>
</h3>
<h3>
<%= button_to 'Vacíar Carrito', @cart, method: :delete, confirm: '¿Estás Seguro?' %>
</h3>

<%else%>

<h3>
No has iniciado sesión
</h3>

<%end%>
