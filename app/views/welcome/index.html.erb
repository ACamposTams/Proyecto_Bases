<h4 class="column">Juegos Disponibles</h4>
<div class="column">
  <ul class="movies-grid no-bullet row">
    <% @juegos.each do |juego| %>
      <li class="large-3 medium-4 small-12 column">
        <div class="movie-card padly">
        <%= link_to juego do %>
            <%= image_tag movie.poster %>
          <% end %>
        <%= juego.poster %>
          <div class="movie-info ell glassy-bg padmy padlx">
            <div class="title">
              <h6><%= juego.titulo %> <span>(<%= juego.anio %>)</span></h6>
            </div>
            <p class="left price label movie-label radius">$ <%= juego.precio %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>