<h3>Si su información es correcta continúe </h3>

<%if signed_in?%>

<div class="large-14 small-12 column">
  <h4>
  Nombre: <%= @comprador.nombre%>
  </h4>
  <h4>
  Dirección: <%= @comprador.direccion %>
  </h4>
  <h4>
  Email: <%= @comprador.email %>
  </h4>
  <h4>
   Teléfono: <%= @comprador.telefono %>
  </h4>
  <h4>
  <center>Lista de Productos:</center>
  </h4>
  <% @cart.cart_productos.each do |item| %>
  <h4>
    <center><%= item.juego.titulo %> Cantidad: <%= item.cantidad %> Subtotal: <%= number_to_currency(item.total_price) %></center>
  </h4>
  <%end%>
  <% @cart.cart_consolas.each do |item| %>
  <h4>
    <center><%= item.consola.nombre %> Cantidad: <%= item.cantidad %> Subtotal: <%= number_to_currency(item.total_price) %></center>
  </h4>
  <%end%>
  <% @cart.cart_coleccionables.each do |item| %>
  <h4>
    <center><%= item.coleccionable.nombre %> Cantidad: <%= item.cantidad %> Subtotal: <%= number_to_currency(item.total_price) %></center>
  </h4>
  <%end%>
    <h3>
  Total: <%= number_to_currency(@cart.total_price) %>
  </h3>
</div>

<%= button_to 'Continuar' , orders_path %>

<%else%>

<h3>
No has iniciado sesión
</h3>

<%end%>