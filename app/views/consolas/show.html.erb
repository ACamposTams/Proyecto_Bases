<div class="large-3 small-12 column">
  <%=image_tag @consola.poster%>
</div>

<div class="large-9 small-12 column">
  <h3>
    <%= @consola.nombre %>
  </h3>
</div>

<div class="large-9 small-12 column">
  <h3>
    <p class="left price label movie-label radius">$ <%= @consola.precio %></p>
  </h3>
</div>

<% if signed_in?%>
<div class="large-9 small-12 column">
  <h3>
    <%= button_to 'Add to Cart', cart_consolas_path(consola_id: @consola)%>
  </h3>
</div>
<%end%>
